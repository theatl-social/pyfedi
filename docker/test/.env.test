# Test Environment Variables
# This file is used by docker-compose for the test environment

# Database
POSTGRES_USER=pyfedi
POSTGRES_PASSWORD=testpass
POSTGRES_DB=pyfedi_test
DATABASE_URL=postgresql://pyfedi:testpass@test-db:5432/pyfedi_test

# Redis
REDIS_URL=redis://test-redis:6379/0

# Flask
FLASK_ENV=testing
FLASK_APP=app
TESTING=1

# Security Settings
SECRET_KEY=test-secret-key-do-not-use-in-production
MEDIA_PROXY_SECRET=test-media-proxy-secret
REQUIRE_SIGNATURES=true
ALLOW_UNSIGNED_ACTIVITIES=false

# Limits
MAX_JSON_SIZE=1000000
MAX_JSON_DEPTH=50
MAX_JSON_KEYS=1000
ACTORS_PER_INSTANCE_HOUR=10
ACTORS_PER_INSTANCE_DAY=50
TOTAL_ACTORS_PER_HOUR=100

# ActivityPub
ACTIVITYPUB_DOMAIN=test.instance
SERVER_NAME=test.instance

# Testing specific
COVERAGE_THRESHOLD=80